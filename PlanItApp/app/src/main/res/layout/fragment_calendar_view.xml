<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:paddingBottom="20dp">

        <ImageView
            android:id="@+id/back"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/back"
            android:backgroundTint="@color/colorPrimaryDark" />
        <!-- lama deleted this-->
        <!-- <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorAccent"
        android:text="See all tasks"
        android:textSize="18sp"
        android:layout_gravity="center_horizontal"/>
-->

    </FrameLayout>

    <com.applandeo.materialcalendarview.CalendarView
        android:id="@+id/calendarView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="30dp"
        app:daysLabelsColor="@color/colorPrimaryDark"
        app:headerColor="@color/colorPrimaryDark"
        app:headerLabelColor="@color/colorPrimary"
        app:highlightedDaysLabelsColor="#FFE6E6"
        app:selectionColor="#E5D4D4"
        app:selectionLabelColor="@color/colorPrimaryDark"
        app:todayLabelColor="@color/colourpurp" />

</LinearLayout>